{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "node": true,
    "commonjs": true
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "global-require": [
      "error"
    ]
  }
}
